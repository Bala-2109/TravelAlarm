<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Travel Alarm"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Trip Info Card -->
        <TextView
            android:id="@+id/tvTripInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:padding="16dp"
            android:text="No trips yet\nCreate your first trip!"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Create Trip Button -->
        <Button
            android:id="@+id/btnCreateTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:padding="20dp"
            android:text="ðŸ—ºï¸ CREATE NEW TRIP"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- View Trips Button -->
        <Button
            android:id="@+id/btnViewTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@android:color/holo_purple"
            android:padding="16dp"
            android:text="ðŸ“‹ VIEW MY TRIPS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTrackingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Status: âšª Not Tracking"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStartTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="â–¶ï¸ START"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnStopTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="â¹ï¸ STOP"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="Instructions:\n1. Create a trip with destinations\n2. Add checkpoints along the way\n3. Save your trip\n4. View all your saved trips"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
